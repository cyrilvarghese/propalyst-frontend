# Google Gemini API Key
# Get your key from: https://ai.google.dev/
NEXT_PUBLIC_GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# SerpAPI Key (for Google Search results)
# Get your key from: https://serpapi.com/manage-api-key
# Free tier: 100 searches/month
NEXT_PUBLIC_SERP_API_KEY=your_serpapi_key_here

# Tavily API Key (for Tavily Search)
# Get your key from: https://app.tavily.com/
# Free tier: 1000 searches/month
NEXT_PUBLIC_TAVILY_API_KEY=your_tavily_key_here

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS Configuration
# Allow multiple frontend ports (in case port 3000 is occupied)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003
